<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Money Manager</title>
        <link rel="stylesheet" href="style\style.css"/>
        <link rel="stylesheet" href="style\general.css"/>
        <link rel="stylesheet" href="style\add-transaction.css"/>
        <link rel="stylesheet" href="partials\forms.css"/>
        <link rel="stylesheet" href="partials\modal.css"/>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;1,300;1,400&display=swap" 
        rel="stylesheet">
        <link rel="stylesheet" href="icon\css\font-awesome.min.css">
    </head>
    <body>
        <header>
            <div class="container-menu register">
                <a class="return" href="index">
                    <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
                </a>
                <h3> Adicionar Transação</h3> 
                <img id="logo" class="column" src="images\logo.png" alt="Logo Money Manager">
                <h1 class="sr-only">Money Manager</h1>                
            </div>
        </header>
        <main class="container register">
            <section id="insert-transaction">
                <form id="form-transaction" method="POST" action="/register">
                    <fieldset>
                        <legend>
                            Dados da Transação
                        </legend>
                        <div class="grid-container">                            
                            <div class="input-group grid-1">
                                <label for="description"><span>Descrição</span></label>                               
                                <input type="text" id="description" name="description" value="<%=fields.description%>" />
                                
            
                                <% errors.forEach((error) => { %>
                                        <% if(error.description){ %> 
                                            <i class="alert"><%= error.description %></i>  
                                        <% }%>                                    
                                <% }) %> 

                            </div>
                            <div class="grid-2">
                                <div class="input-group grid-2-1">                                
                                    <label for="value-transaction"><span>Valor</span></label>
                                    <input type="number" step=".01" id="value-transaction" name="value-transaction" value="<%=fields['value-transaction']%>"/>
                                    
                                    <% errors.forEach((error) => { %>
                                        <% if(error["value-transaction"]){ %> 
                                            <i class="alert"><%= error["value-transaction"] %></i>  
                                        <% }%>                                    
                                    <% }) %> 

                                </div>     

                                <div class="input-group grid-2-2"> 
                                    <label for="description"><span>Tipo</span></label>

                                    <% errors.forEach((error) => { %>
                                        <% if(error.type){ %> 
                                            <i class="alert"><%= error.type %></i>  
                                        <% }%>                                    
                                    <% }) %>     

                                    <div class="group-combobox">                          
                                        <div class="custom-selection">
                                            <div class="select">
                                                <div class="header-select">
                                                    <span>  <%= fields.type ? fields.type : "Selecione" %> </span>  
                                                    <input type="hidden" name="type" id="type" value="<%= fields.type ? fields.type : '' %>"/>          				
                                                </div>                                        
                                                <div class="group-arrow">
                                                    <div class="arrow"></div>
                                                </div>
                                            </div>                                	    				
                                            <div class="values">
                                                <span class="value selected">Receita</span>
                                                <span class="value">Despesa</span>
                                            </div>  
                                        </div>                     
                                    </div>
                                </div>
                            </div>
                            <div class="grid-3">
                                <div class="input-group grid-3-1">
                                    <label for="date"><span>Data</span></label>
                                    <input type="date" id="date" name="date" value="<%= fields.date %>"/>

                                    <% errors.forEach((error) => { %>
                                        <% if(error.date){ %> 
                                            <i class="alert"><%= error.date %></i>  
                                        <% }%>                                    
                                    <% }) %> 

                                </div>
                                
                                <div class="input-group grid-3-2">  
                                    <label for=""><span>Categoria</span></label>                      
                                    <div class="group-combobox-category">                            
                                        <div class="custom-selection-category">
                                            <div class="select">
                                                <div class="header-select-category">
                                                    <span>Selecione</span> 
                                                    <input type="hidden" name="category" id="category"/>            				
                                                </div>                                        
                                                <div class="group-arrow">
                                                    <div class="arrow"></div>
                                                </div>
                                            </div>                                	    				
                                            <div class="values-category">
                                                <span class="value-category selected">Moradia</span>
                                                <span class="value-category">Alimentação</span>
                                                <span class="value-category">Saude</span>
                                                <span class="value-category">Educacao</span>
                                                <span class="value-category">Despesas Pessoais</span>
                                                <span class="value-category">Transporte</span>
                                                <span class="value-category">Celular/TV/Internet</span>
                                                <span class="value-category">Lazer</span>
                                            </div>  
                                        </div>                          
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </section>
            <aside class="card-button">
                <div class="button-group">
                    <button class="button" form="form-transaction" type="submit" title="Salvar Dados">Salvar</button>
                    <a class="link-category">Criar Categoria</a>
                </div>
            </aside>
        </main>
       
        <div id="modal-category" class="modal-close">      
            <div class="category-modal">
                <div class="modal-register">
                    <form class="form-register">                
                        <fieldset>
                            <legend>
                                Dados da Categoria
                            </legend>
                            <div class="grid-container">
                                <div class="input-group">
                                    <label for="description"><span>Descrição</span></label>
                                    <input type="text" id="description" name="description"/>
                                </div>
                            </div>
                        </fieldset>
                                
                        <div class="button-group">
                            <button class="button" type="submit" name="submit" value="Enviar">Salvar</button>
                            <a href="" class="btn-close" value="Fechar">Fechar</a>
                        </div>
                    
                    </form>
                </div>
            </div>
        </div>

        <script src="scripts/register.js" defer type="module"></script>
        <script src="scripts/modal.js" defer type="module"></script>
    </body>
</html>